             xmlns:local="clr-namespace:BatteryMobileSaver"
             x:Class="BatteryMobileSaver.MainPage">
    <StackLayout>
        <Label Text="Welcome to Xamarin Forms!" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
